<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="15dp"
    android:id="@+id/layout_monTrongBan"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/food"
        app:tint="#447BCA"
        android:padding="15dp"
        android:background="@drawable/background_food"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tenMonAn_banSelected"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ba chi bo my"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imv_option"
                android:src="@drawable/bacham"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gia_banSelected"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="60,000"/>

            <ImageView
                android:id="@+id/imv_tru_banSelected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tru"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/edt_soluong_banSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:background="@null"
                android:visibility="visible"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/imv_cong_banSelected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/plus"
                android:visibility="visible"
                android:padding="8dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>