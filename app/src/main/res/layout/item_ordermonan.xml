<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/food"
        app:tint="#447BCA"
        android:padding="15dp"
        android:background="@drawable/background_food"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tenMonAn"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ba chi bo my"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="60,000"/>

            <ImageView
                android:id="@+id/imv_tru"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tru"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/edt_soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:background="@null"
                android:visibility="gone"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/imv_cong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/plus"
                android:visibility="gone"
                android:padding="8dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>